{
  "inlayHint.enable": false,
  "flutter.provider.hot-reload": false,
  "dart.showTodos": false,
  "languageserver": {
    "nix": {
      "command": "nixd",
      "filetypes": ["nix"]
    },
    "typst": {
      "command": "tinymist",
      "filetypes": ["typst"],
      "settings": {
        "formatterMode": "typstyle",
        "exportPdf": "onSave",
        "formatterPrintWidth": 88
      }
    }
  },
  "pyright.organizeimports.provider": "ruff",
  "python.formatting.provider": "ruff",
  "suggest.noselect": true
}
