# Launchers

alt + semicolon
    term

alt + shift + semicolon
    term -e lf

alt + y
    term -e pulsemixer

alt + shift + y
    term -e btm --color default-light

alt + u
    qb

alt + shift + u
    telegram-desktop

alt + ctrl + u
    spotify

alt + i
    zathura

alt + o
    firefox

alt + p
    rstudio

# Screenshots and screencasts

alt + Return
    import screenshot.png

alt + shift + Return
    simplescreenrecorder

# Reset

ctrl + alt + BackSpace
    bspc quit

shift + alt + BackSpace
    reboot

shift + ctrl + alt + BackSpace
    poweroff

# BSPWM

alt + apostrophe
    ubspc close

alt + shift + apostrophe
    ubspc undo close

alt + comma
    ubspc branch

alt + shift + comma
    bspc desktop -r

alt + ctrl + apostrophe
    bspc node -c

alt + ctrl + slash
    bspc node -g hidden

alt + m
    bspc node -t tiled

alt + shift + m
    bspc node -t fullscreen

alt + ctrl + m
    bspc node -t floating

alt + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}.local

alt + ctrl + shift + {h,j,k,l}
    bspc node -p {west,south,north,east}

alt + {_, shift + }slash
    bspc node -f @{parent,/}

alt + {_, shift + }period
    bspc node -f @{first,brother}

alt + {_,shift + }space
    bspc desktop -f {next,prev}.local

alt + ctrl + {_,shift + }space
    bspc desktop -b {next,prev}

alt + {_,shift + }backslash
    bspc monitor -f {next,prev}

alt + ctrl + period
    bspc node -R 90

alt + {_,shift} + n
    bspc node -d {next,prev}.local

alt + ctrl + n
    bspc node -m next

alt + ctrl + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
